<UserControl x:Class="InventoryManagementSystem.Views.SupportRequestView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="580" d:DesignWidth="820">
    <Grid Background="{StaticResource WindowBackgroundBrush}">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Style="{StaticResource FloatingPanelStyle}" Height="100" Margin="0,0,0,20">
                <TextBlock Text="🧬 Request Support"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#00FFF0"
                           FontFamily="Orbitron"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>
            </Border>

            <!-- Form -->
            <Border Grid.Row="1" Style="{StaticResource FloatingPanelStyle}" Margin="0,0,0,20" Padding="20">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Priority -->
                        <Label Grid.Row="0" Grid.Column="0"
                               Content="Priority:"
                               Foreground="#00FFF0"
                               FontFamily="Orbitron"
                               FontSize="14"
                               Margin="0,0,10,10"
                               VerticalAlignment="Center"/>
                        <ComboBox Grid.Row="0" Grid.Column="1"
                                  ItemsSource="{Binding Priorities}"
                                  SelectedItem="{Binding Priority}"
                                  Margin="0,0,0,10"
                                  Foreground="Black"
                                  Background="#66000000"
                                  BorderBrush="#00FFF0"
                                  FontFamily="Orbitron"
                                  FontSize="14"
                                  Padding="5">
                            <ComboBox.Resources>
                                <Style TargetType="ComboBoxItem">
                                    <Setter Property="Foreground" Value="#00FFF0"/>
                                    <Setter Property="Background" Value="#66000000"/>
                                    <Setter Property="FontFamily" Value="Orbitron"/>
                                    <Setter Property="Padding" Value="5"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#66CCFF"/>
                                            <Setter Property="Foreground" Value="#000000"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#33FF99"/>
                                            <Setter Property="Foreground" Value="#000000"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ComboBox.Resources>
                        </ComboBox>

                        <!-- Description -->
                        <Label Grid.Row="1" Grid.Column="0"
                               Content="Description:"
                               Foreground="#00FFF0"
                               FontFamily="Orbitron"
                               FontSize="14"
                               Margin="0,0,10,10"
                               VerticalAlignment="Center"/>
                        <TextBox Grid.Row="1" Grid.Column="1"
                                 Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBox}"
                                 Foreground="#00FFF0"
                                 Background="#66000000"
                                 BorderBrush="#00FFF0"
                                 FontFamily="Orbitron"
                                 FontSize="14"
                                 Padding="5"
                                 Margin="0,0,0,10"
                                 AcceptsReturn="True"
                                 Height="100"/>
                    </Grid>
                </ScrollViewer>
            </Border>

            <!-- Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,10,0">
                <Button Content="Submit"
                        Style="{StaticResource ModernButton}"
                        Command="{Binding SubmitRequestCommand}"
                        Margin="5"/>
                <Button Content="Cancel"
                        Style="{StaticResource ModernButton}"
                        Command="{Binding CancelCommand}"
                        Margin="5"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>