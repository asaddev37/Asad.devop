<UserControl x:Class="InventoryManagementSystem.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="580" d:DesignWidth="820">
    <Grid Background="{StaticResource WindowBackgroundBrush}">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Style="{StaticResource FloatingPanelStyle}" Height="100" Margin="0,0,0,20">
                <TextBlock Text="🧬 System Settings"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#00FFF0"
                           FontFamily="Orbitron"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>
            </Border>

            <!-- Form -->
            <Border Grid.Row="1" Style="{StaticResource FloatingPanelStyle}" Margin="0,0,0,20" Padding="20">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Low Stock Threshold -->
                        <Label Grid.Row="0" Grid.Column="0"
                               Content="Low Stock Threshold:"
                               Foreground="#00FFF0"
                               FontFamily="Orbitron"
                               FontSize="14"
                               Margin="0,0,10,10"
                               VerticalAlignment="Center"/>
                        <TextBox Grid.Row="0" Grid.Column="1"
                                 Text="{Binding LowStockThreshold, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBox}"
                                 Foreground="#00FFF0"
                                 Background="#66000000"
                                 BorderBrush="#00FFF0"
                                 FontFamily="Orbitron"
                                 FontSize="14"
                                 Padding="5"
                                 Margin="0,0,0,10"/>

                        <!-- Session Timeout -->
                        <Label Grid.Row="1" Grid.Column="0"
                               Content="Session Timeout (min):"
                               Foreground="#00FFF0"
                               FontFamily="Orbitron"
                               FontSize="14"
                               Margin="0,0,10,10"
                               VerticalAlignment="Center"/>
                        <TextBox Grid.Row="1" Grid.Column="1"
                                 Text="{Binding SessionTimeout, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBox}"
                                 Foreground="#00FFF0"
                                 Background="#66000000"
                                 BorderBrush="#00FFF0"
                                 FontFamily="Orbitron"
                                 FontSize="14"
                                 Padding="5"
                                 Margin="0,0,0,10"/>

                        <!-- Backup/Restore -->
                        <Label Grid.Row="2" Grid.Column="0"
                               Content="Backup/Restore:"
                               Foreground="#00FFF0"
                               FontFamily="Orbitron"
                               FontSize="14"
                               Margin="0,0,10,10"
                               VerticalAlignment="Center"/>
                        <TextBox Grid.Row="2" Grid.Column="1"
                                 Text="{Binding BackupPath, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBox}"
                                 Foreground="#00FFF0"
                                 Background="#66000000"
                                 BorderBrush="#00FFF0"
                                 FontFamily="Orbitron"
                                 FontSize="14"
                                 Padding="5"
                                 Margin="0,0,0,10"
                                 IsReadOnly="True"/>

                        <!-- Status -->
                        <Label Grid.Row="3" Grid.ColumnSpan="2"
                               Content="{Binding StatusMessage}"
                               Foreground="#00FFF0"
                               FontFamily="Orbitron"
                               FontSize="14"
                               Margin="0,0,0,10"/>
                    </Grid>
                </ScrollViewer>
            </Border>

            <!-- Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,10,0">
                <Button Content="Save Settings"
                        Style="{StaticResource ModernButton}"
                        Command="{Binding SaveSettingsCommand}"
                        Margin="5"/>
                <Button Content="Backup Database"
                        Style="{StaticResource ModernButton}"
                        Command="{Binding BackupDatabaseCommand}"
                        Margin="5"/>
                <Button Content="Restore Database"
                        Style="{StaticResource ModernButton}"
                        Command="{Binding RestoreDatabaseCommand}"
                        Margin="5"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>