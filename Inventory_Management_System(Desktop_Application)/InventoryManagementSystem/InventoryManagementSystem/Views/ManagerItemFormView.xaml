<UserControl x:Class="InventoryManagementSystem.Views.ManagerItemFormView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="580" d:DesignWidth="820">
    <Grid Background="{StaticResource WindowBackgroundBrush}">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Style="{StaticResource FloatingPanelStyle}" Height="100" Margin="0,0,0,20">
                <TextBlock Text="{Binding FormTitle}"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#00FFF0"
                           FontFamily="Orbitron"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>
            </Border>

            <!-- Form -->
            <Border Grid.Row="1" Style="{StaticResource FloatingPanelStyle}" Margin="0,0,0,20" Padding="20">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Item Name (Read-Only) -->
                        <Label Grid.Row="0" Grid.Column="0"
                               Content="Item Name:"
                               Foreground="#00FFF0"
                               FontFamily="Orbitron"
                               FontSize="14"
                               Margin="0,0,10,10"
                               VerticalAlignment="Center"/>
                        <TextBox Grid.Row="0" Grid.Column="1"
                                 Text="{Binding ItemName}"
                                 Foreground="#00FFF0"
                                 Background="#66000000"
                                 BorderBrush="#00FFF0"
                                 FontFamily="Orbitron"
                                 FontSize="14"
                                 Padding="5"
                                 Margin="0,0,0,10"
                                 IsReadOnly="True"/>

                        <!-- Category (Read-Only) -->
                        <Label Grid.Row="1" Grid.Column="0"
                               Content="Category:"
                               Foreground="#00FFF0"
                               FontFamily="Orbitron"
                               FontSize="14"
                               Margin="0,0,10,10"
                               VerticalAlignment="Center"/>
                        <TextBox Grid.Row="1" Grid.Column="1"
                                 Text="{Binding Category}"
                                 Foreground="#00FFF0"
                                 Background="#66000000"
                                 BorderBrush="#00FFF0"
                                 FontFamily="Orbitron"
                                 FontSize="14"
                                 Padding="5"
                                 Margin="0,0,0,10"
                                 IsReadOnly="True"/>

                        <!-- Quantity -->
                        <Label Grid.Row="2" Grid.Column="0"
                               Content="Quantity:"
                               Foreground="#00FFF0"
                               FontFamily="Orbitron"
                               FontSize="14"
                               Margin="0,0,10,10"
                               VerticalAlignment="Center"/>
                        <TextBox Grid.Row="2" Grid.Column="1"
                                 Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}"
                                 Foreground="#00FFF0"
                                 Background="#66000000"
                                 BorderBrush="#00FFF0"
                                 FontFamily="Orbitron"
                                 FontSize="14"
                                 Padding="5"
                                 Margin="0,0,0,10">
                            <TextBox.InputBindings>
                                <KeyBinding Key="Enter" Command="{Binding SaveCommand}"/>
                            </TextBox.InputBindings>
                        </TextBox>

                        <!-- Unit Price -->
                        <Label Grid.Row="3" Grid.Column="0"
                               Content="Unit Price:"
                               Foreground="#00FFF0"
                               FontFamily="Orbitron"
                               FontSize="14"
                               Margin="0,0,10,10"
                               VerticalAlignment="Center"/>
                        <TextBox Grid.Row="3" Grid.Column="1"
                                 Text="{Binding UnitPrice, UpdateSourceTrigger=PropertyChanged}"
                                 Foreground="#00FFF0"
                                 Background="#66000000"
                                 BorderBrush="#00FFF0"
                                 FontFamily="Orbitron"
                                 FontSize="14"
                                 Padding="5"
                                 Margin="0,0,0,10">
                            <TextBox.InputBindings>
                                <KeyBinding Key="Enter" Command="{Binding SaveCommand}"/>
                            </TextBox.InputBindings>
                        </TextBox>

                        <!-- Supplier -->
                        <Label Grid.Row="4" Grid.Column="0"
                               Content="Supplier:"
                               Foreground="#00FFF0"
                               FontFamily="Orbitron"
                               FontSize="14"
                               Margin="0,0,10,10"
                               VerticalAlignment="Center"/>
                        <ComboBox Grid.Row="4" Grid.Column="1"
                                  ItemsSource="{Binding Suppliers}"
                                  SelectedItem="{Binding SelectedSupplier, UpdateSourceTrigger=PropertyChanged}"
                                  DisplayMemberPath="SupplierName"
                                  Margin="0,0,0,10"
                                  Foreground="Black"
                                  Background="#66000000"
                                  BorderBrush="#00FFF0"
                                  FontFamily="Orbitron"
                                  FontSize="14"
                                  Padding="5">
                            <ComboBox.Resources>
                                <Style TargetType="ComboBoxItem">
                                    <Setter Property="Foreground" Value="#00FFF0"/>
                                    <Setter Property="Background" Value="#66000000"/>
                                    <Setter Property="FontFamily" Value="Orbitron"/>
                                    <Setter Property="Padding" Value="5"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#66CCFF"/>
                                            <Setter Property="Foreground" Value="#000000"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#33FF99"/>
                                            <Setter Property="Foreground" Value="#000000"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ComboBox.Resources>
                          
                        </ComboBox>
                    </Grid>
                </ScrollViewer>
            </Border>

            <!-- Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,10,0">
                <Button Content="Save"
                        Style="{StaticResource ModernButton}"
                        Command="{Binding SaveCommand}"
                        Margin="5"/>
                <Button Content="Cancel"
                        Style="{StaticResource ModernButton}"
                        Command="{Binding CancelCommand}"
                        Margin="5"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>