<UserControl x:Class="InventoryManagementSystem.Views.SupplierFormView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="580" d:DesignWidth="820">
	<Grid Background="{StaticResource WindowBackgroundBrush}">
		<Grid Margin="20">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="Auto"/>
			</Grid.RowDefinitions>

			<!-- Header -->
			<Border Grid.Row="0" Style="{StaticResource FloatingPanelStyle}" Height="100" Margin="0,0,0,20">
				<TextBlock Text="{Binding FormTitle}"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#00FFF0"
                           FontFamily="Orbitron"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>
			</Border>

			<!-- Form -->
			<Border Grid.Row="1" Style="{StaticResource FloatingPanelStyle}" Margin="0,0,0,20" Padding="20">
				<ScrollViewer VerticalScrollBarVisibility="Auto">
					<Grid>
						<Grid.RowDefinitions>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="Auto"/>
						</Grid.RowDefinitions>
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="200"/>
							<ColumnDefinition Width="*"/>
						</Grid.ColumnDefinitions>

						<!-- Supplier Name -->
						<Label Grid.Row="0" Grid.Column="0"
                               Content="Supplier Name:"
                               Foreground="#00FFF0"
                               FontFamily="Orbitron"
                               FontSize="14"
                               Margin="0,0,10,10"
                               VerticalAlignment="Center"/>
						<TextBox Grid.Row="0" Grid.Column="1"
                                 Text="{Binding SupplierName, UpdateSourceTrigger=PropertyChanged}"
                                 Foreground="#00FFF0"
                                 Background="#66000000"
                                 BorderBrush="#00FFF0"
                                 FontFamily="Orbitron"
                                 FontSize="14"
                                 Padding="5"
                                 Margin="0,0,0,10">
							<TextBox.InputBindings>
								<KeyBinding Key="Enter" Command="{Binding SaveCommand}"/>
							</TextBox.InputBindings>
						</TextBox>

						<!-- Contact Info -->
						<Label Grid.Row="1" Grid.Column="0"
                               Content="Contact Info:"
                               Foreground="#00FFF0"
                               FontFamily="Orbitron"
                               FontSize="14"
                               Margin="0,0,10,10"
                               VerticalAlignment="Center"/>
						<TextBox Grid.Row="1" Grid.Column="1"
                                 Text="{Binding ContactInfo, UpdateSourceTrigger=PropertyChanged}"
                                 Foreground="#00FFF0"
                                 Background="#66000000"
                                 BorderBrush="#00FFF0"
                                 FontFamily="Orbitron"
                                 FontSize="14"
                                 Padding="5"
                                 Margin="0,0,0,10">
							<TextBox.InputBindings>
								<KeyBinding Key="Enter" Command="{Binding SaveCommand}"/>
							</TextBox.InputBindings>
						</TextBox>

						<!-- Address -->
						<Label Grid.Row="2" Grid.Column="0"
                               Content="Address:"
                               Foreground="#00FFF0"
                               FontFamily="Orbitron"
                               FontSize="14"
                               Margin="0,0,10,10"
                               VerticalAlignment="Center"/>
						<TextBox Grid.Row="2" Grid.Column="1"
                                 Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}"
                                 Foreground="#00FFF0"
                                 Background="#66000000"
                                 BorderBrush="#00FFF0"
                                 FontFamily="Orbitron"
                                 FontSize="14"
                                 Padding="5"
                                 Margin="0,0,0,10"
                                 AcceptsReturn="True"
                                 Height="60">
							<TextBox.InputBindings>
								<KeyBinding Key="Enter" Command="{Binding SaveCommand}"/>
							</TextBox.InputBindings>
						</TextBox>
					</Grid>
				</ScrollViewer>
			</Border>

			<!-- Buttons -->
			<StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,10,0">
				<Button Content="Save"
                        Style="{StaticResource ModernButton}"
                        Command="{Binding SaveCommand}"
                        Margin="5"/>
				<Button Content="Cancel"
                        Style="{StaticResource ModernButton}"
                        Command="{Binding CancelCommand}"
                        Margin="5"/>
			</StackPanel>
		</Grid>
	</Grid>
</UserControl>