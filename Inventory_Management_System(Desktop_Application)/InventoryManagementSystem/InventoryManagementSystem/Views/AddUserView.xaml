<UserControl x:Class="InventoryManagementSystem.Views.AddUserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="580" d:DesignWidth="820">
    <Grid Background="{StaticResource WindowBackgroundBrush}">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Style="{StaticResource FloatingPanelStyle}" Height="100" Margin="0,0,0,20">
                <TextBlock Text="{Binding Title}"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#00FFF0"
                           FontFamily="Orbitron"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>
            </Border>

            <!-- Form -->
            <Border Grid.Row="1" Style="{StaticResource FloatingPanelStyle}" Margin="0,0,0,20" Padding="20">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Debug: Show IsEditMode value -->
                        <TextBlock Text="{Binding IsEditMode, StringFormat='IsEditMode: {0}'}"
                                   Foreground="Yellow"
                                   FontFamily="Orbitron"
                                   FontSize="12"
                                   Margin="0,0,0,10"/>

                        <!-- Username -->
                        <Label Content="Username"
                               Foreground="#00FFF0"
                               FontFamily="Orbitron"
                               FontSize="14"
                               Margin="0,0,0,5"/>
                        <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBox}"
                                 Foreground="#00FFF0"
                                 Background="#66000000"
                                 BorderBrush="#00FFF0"
                                 FontFamily="Orbitron"
                                 FontSize="14"
                                 Padding="5">
                            <TextBox.Resources>
                                <Style TargetType="TextBox" BasedOn="{StaticResource ModernTextBox}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="5">
                                                    <Grid>
                                                        <ScrollViewer x:Name="PART_ContentHost"/>
                                                        <TextBlock x:Name="PlaceholderText"
                                                                   Text="Enter username..."
                                                                   Foreground="#80FFFFFF"
                                                                   FontFamily="Orbitron"
                                                                   IsHitTestVisible="False"
                                                                   Visibility="Collapsed"
                                                                   Margin="5,0,0,0"
                                                                   VerticalAlignment="Center"/>
                                                    </Grid>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <MultiTrigger>
                                                        <MultiTrigger.Conditions>
                                                            <Condition Property="Text" Value=""/>
                                                            <Condition Property="IsFocused" Value="False"/>
                                                        </MultiTrigger.Conditions>
                                                        <Setter TargetName="PlaceholderText" Property="Visibility" Value="Visible"/>
                                                    </MultiTrigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>

                        <!-- Password -->
                        <Label Content="Password"
                               Foreground="#00FFF0"
                               FontFamily="Orbitron"
                               FontSize="14"
                               Margin="0,10,0,5"
                               Visibility="{Binding ShowPasswordField, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        <PasswordBox x:Name="passwordBox"
                                     Style="{StaticResource ModernPasswordBox}"
                                     Visibility="{Binding ShowPasswordField, Converter={StaticResource BooleanToVisibilityConverter}}"
                                     Foreground="#00FFF0"
                                     Background="#66000000"
                                     BorderBrush="#00FFF0"
                                     FontFamily="Orbitron"
                                     FontSize="14"
                                     Padding="5">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="PasswordChanged">
                                    <i:InvokeCommandAction Command="{Binding PasswordChangedCommand}" 
                                                           CommandParameter="{Binding ElementName=passwordBox}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </PasswordBox>

                        <!-- Email -->
                        <Label Content="Email"
                               Foreground="#00FFF0"
                               FontFamily="Orbitron"
                               FontSize="14"
                               Margin="0,10,0,5"/>
                        <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBox}"
                                 Foreground="#00FFF0"
                                 Background="#66000000"
                                 BorderBrush="#00FFF0"
                                 FontFamily="Orbitron"
                                 FontSize="14"
                                 Padding="5">
                            <TextBox.Resources>
                                <Style TargetType="TextBox" BasedOn="{StaticResource ModernTextBox}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="5">
                                                    <Grid>
                                                        <ScrollViewer x:Name="PART_ContentHost"/>
                                                        <TextBlock x:Name="PlaceholderText"
                                                                   Text="Enter email..."
                                                                   Foreground="#80FFFFFF"
                                                                   FontFamily="Orbitron"
                                                                   IsHitTestVisible="False"
                                                                   Visibility="Collapsed"
                                                                   Margin="5,0,0,0"
                                                                   VerticalAlignment="Center"/>
                                                    </Grid>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <MultiTrigger>
                                                        <MultiTrigger.Conditions>
                                                            <Condition Property="Text" Value=""/>
                                                            <Condition Property="IsFocused" Value="False"/>
                                                        </MultiTrigger.Conditions>
                                                        <Setter TargetName="PlaceholderText" Property="Visibility" Value="Visible"/>
                                                    </MultiTrigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>

                        <!-- Full Name -->
                        <Label Content="Full Name"
                               Foreground="#00FFF0"
                               FontFamily="Orbitron"
                               FontSize="14"
                               Margin="0,10,0,5"/>
                        <TextBox Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBox}"
                                 Foreground="#00FFF0"
                                 Background="#66000000"
                                 BorderBrush="#00FFF0"
                                 FontFamily="Orbitron"
                                 FontSize="14"
                                 Padding="5">
                            <TextBox.Resources>
                                <Style TargetType="TextBox" BasedOn="{StaticResource ModernTextBox}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="5">
                                                    <Grid>
                                                        <ScrollViewer x:Name="PART_ContentHost"/>
                                                        <TextBlock x:Name="PlaceholderText"
                                                                   Text="Enter full name..."
                                                                   Foreground="#80FFFFFF"
                                                                   FontFamily="Orbitron"
                                                                   IsHitTestVisible="False"
                                                                   Visibility="Collapsed"
                                                                   Margin="5,0,0,0"
                                                                   VerticalAlignment="Center"/>
                                                    </Grid>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <MultiTrigger>
                                                        <MultiTrigger.Conditions>
                                                            <Condition Property="Text" Value=""/>
                                                            <Condition Property="IsFocused" Value="False"/>
                                                        </MultiTrigger.Conditions>
                                                        <Setter TargetName="PlaceholderText" Property="Visibility" Value="Visible"/>
                                                    </MultiTrigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>

                        <!-- Role -->
                        <Label Content="Role"
                               Foreground="#00FFF0"
                               FontFamily="Orbitron"
                               FontSize="14"
                               Margin="0,10,0,5"/>
                        <ComboBox SelectedItem="{Binding Role}"
                                  Style="{StaticResource ModernComboBox}"
                                  Foreground="Black"
                                  Background="#66000000"
                                  BorderBrush="#00FFF0"
                                  FontFamily="Orbitron"
                                  FontSize="14"
                                  Padding="5">
                            <ComboBox.Resources>
                                <Style TargetType="ComboBoxItem">
                                    <Setter Property="Foreground" Value="#00FFF0"/>
                                    <Setter Property="Background" Value="#66000000"/>
                                    <Setter Property="FontFamily" Value="Orbitron"/>
                                    <Setter Property="Padding" Value="5"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#66CCFF"/>
                                            <Setter Property="Foreground" Value="#000000"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#33FF99"/>
                                            <Setter Property="Foreground" Value="#000000"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ComboBox.Resources>
                            <ComboBoxItem Content="Admin"/>
                            <ComboBoxItem Content="Manager"/>
                            <ComboBoxItem Content="Staff"/>
                        </ComboBox>

                        <!-- Error Message -->
                        <TextBlock Text="{Binding ErrorMessage}"
                                   Foreground="#FF5555"
                                   Background="#66000000"
                                   Padding="5"
                                   Margin="0,15,0,0"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   Height="40"
                                   FontFamily="Orbitron"
                                   FontSize="12"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,10,0">
                <Button Content="Save"
                        Style="{StaticResource ModernButton}"
                        Command="{Binding SaveCommand}"
                        Width="100"
                        Margin="5"
                        IsEnabled="{Binding IsSaveEnabled}"/>
                <Button Content="Cancel"
                        Style="{StaticResource ModernButton}"
                        Command="{Binding CancelCommand}"
                        Width="100"
                        Margin="5"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>